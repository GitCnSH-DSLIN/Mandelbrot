function TMandelbrot.ComplexToIterN( const C_:TDoubleC ) :Single;
const
     _PowN_ :Double = 2;  //Pow2( Z )
var
   Z :TDoubleC;
   N :Integer;
   A :Double;
begin
     Z := 0;

     for N := 1 to _IterN do
     begin
          Z := Pow2( Z ) + C_;

          A := Z.Abso;

          if A > _Diver then
          begin
               Result := N - LogN( _PowN_, LogN( _Diver, Z.Abso ) );

               Exit;
          end;
     end;

     Result := _IterN;
end;

